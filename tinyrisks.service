[Unit]
Description=TinyRisks Flask Application
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/tinyrisks.art
Environment="PATH=/usr/bin:/usr/local/bin"
ExecStart=/usr/local/bin/gunicorn -w 4 -b 127.0.0.1:5000 app:app
Restart=always
RestartSec=3

# Logging
StandardOutput=append:/var/www/tinyrisks.art/logs/flask_stdout.log
StandardError=append:/var/www/tinyrisks.art/logs/flask_stderr.log

[Install]
WantedBy=multi-user.target
